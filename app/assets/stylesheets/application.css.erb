.background {
  background-image:url('<%= asset_path("countertop.jpg") %>');
  background-repeat: no-repeat;
  background-size: cover;
  background-attachment:  fixed;
  background-color: #e0d8c9;
}

.sample-image {
  width: 120px;
  height: 120px;
  margin-top: 12px;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.full-image {
  width: 260px;
  height: 260px;
}

.translucent_background {
  /*background-image:url('<%= asset_path("translucent_box_single.png") %> ');*/
  background-color: rgba(200, 173, 123, 0.8);
  border-style: solid;
  border-width: 1px;
  border-color: #BDAD8F;
}

.dessert_feature {
  padding: 15px;
}

.dessert_list {
  /*background-image:url('<%= asset_path("opaque_box_single.png") %> ');*/
  /*background-repeat: no-repeat;*/
  width: 150px;
  height: 165px;
  margin: 19px;
  float: left;
}

.dessert_list a{
  color: #624C3B;
}

.dessert_list a:hover{
  color: #3F2E21;
  text-decoration: none;
}

.navbar-default{
  background-color: rgba(200, 173, 123, 0.8);
  border-color: #BDAD8F;
}

.jumbotron{
  background-color: #C8AD7B;
}

