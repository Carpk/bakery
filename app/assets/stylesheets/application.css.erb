.background {
  background-image:url('<%= asset_path("countertop.jpg") %>');
  background-repeat: no-repeat;
  background-size: cover;
  background-attachment:  fixed;
  background-color: #e0d8c9;
}

.sample-image {
  width: 200px;
  height: 200px;
  margin-top: 12px;
  display: block;
  margin-left: auto;
  margin-right: auto;
}

.full-image {
  margin: 20px;
  width: 500px;
  height: 500px;
}

.translucent_background {
  background-color: rgba(200, 173, 123, 0.4);
}

.dessert_feature {
  padding: 15px;
}

.dessert_list {
  /*background-image:url('<%= asset_path("opaque_box_single.png") %> ');*/
  /*background-repeat: no-repeat;*/
  width: 240px;
  height: 240px;
  margin: 17px;
  float: left;
}

.dessert_list a{
  color: rgba(98, 76, 59, 0.8);
  /*color: #624C3B;*/
}

.dessert_list a:hover{
  color: #3F2E21;
  text-decoration: none;
}

.dessert_list:hover{
  /*color: #3F2E21;*/
  background-color: rgba(200, 173, 123, 0.6);
}

.img-container{
  background-image:url('<%= asset_path("landing-page.png") %> ');
  background-repeat: no-repeat;
  background-size: 100%;
  height: 65vw;
  padding-top: 8em;
}

.img-text{
  text-shadow: 0px 0px 3px #CBA067;
  color: black;
  /*position: absolute;*/
  /*margin-top: 8em;*/
  /*width: 100%;*/
}

.landing-page-img{
  width: 100%;
}

.navbar-default{
  background-color: rgba(200, 173, 123, 0.4);
  border-color: rgba(189, 173, 143, 0);
  border-radius: 0;
}

.jumbotron{
  background-color: rgba(200, 173, 123, 0.8);
}

.navbar-default .navbar-nav li a{
  /*color: #3F2E21;*/
  color: #624C3B;
}

html {
  position: relative;
  min-height: 100%;
}

body {
  margin-bottom: 8em;
}

footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 12px;
  margin-top: 10em;
  background-color: rgba(200, 173, 123, 0.4);
}

#map-canvas {
  width: 25vw;
  height: 25vw;
  background-color: grey;
}
